<phone:PhoneApplicationPage 
    x:Class="DiversityPhone.View.EditIU"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:controls="clr-namespace:DiversityPhone.Controls"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="696" d:DesignWidth="480"
    shell:SystemTray.IsVisible="True"
    DataContext="{Binding Source={StaticResource Locator}, Path=EditIU}" d:DataContext="{d:DesignData /SampleData/EditIUVMSampleData.xaml}">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">            
            <TextBlock x:Name="PageTitle" Text="identification" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
		<ScrollViewer Grid.Row="1">
        <StackPanel x:Name="ContentPanel"  Margin="12,0,12,0">
            <controls:CommandNotAvailableLabel Text="{Binding Resources.Info_CantEditItem, Source={StaticResource LocalizedStrings}}"
                                                   Command="{Binding ToggleEditable}"/>
           
            <toolkit:ListPicker ItemsSource="{Binding TaxonomicGroups}" 
                                SelectedItem="{Binding SelectedTaxGroup, Mode=TwoWay}"
                                ItemTemplate="{StaticResource TermListItemTemplate}"                                
                                FullModeItemTemplate="{StaticResource TermListPickerItemTemplate}"
                                Header="Taxonomic Group"
                                FullModeHeader="Taxonomic Group"
                                IsEnabled="{Binding IsEditable}"/>

                <TextBlock Text="Name Query" Visibility="{Binding IsEditable, Converter={StaticResource BoolToVis}}"/>
                <TextBox Text="{Binding QueryString, Mode=TwoWay}" Visibility="{Binding IsEditable, Converter={StaticResource BoolToVis}}"/>
            
            <ListBox BorderThickness="3"  
                     ItemsSource="{Binding AvailableIdentifications}"                     
                     SelectedItem="{Binding CurrentIdentification, Mode=TwoWay}"
                     ItemTemplate="{StaticResource TaxonNameItemTemplate}"
					 Style="{StaticResource ListBoxWhiteStyle}" 
                     Visibility="{Binding IsEditable, Converter={StaticResource BoolToVis}}"
                     IsEnabled="{Binding IsEditable}">
            	<ListBox.BorderBrush>
            		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
            	</ListBox.BorderBrush>
            </ListBox>

            <StackPanel Visibility="{Binding IsToplevel, Converter={StaticResource BoolToVis}, ConverterParameter=True}">
                <toolkit:ListPicker ItemsSource="{Binding RelationshipTypes}" 
                                SelectedItem="{Binding SelectedRelationshipType, Mode=TwoWay}"
                                ItemTemplate="{StaticResource TermListItemTemplate}"                                
                                FullModeItemTemplate="{StaticResource TermListPickerItemTemplate}"
                                Header="Relationship Type"
                                FullModeHeader="Relationship Type"
                                IsEnabled="{Binding IsEditable}" />
            </StackPanel>

            <CheckBox IsChecked="{Binding OnlyObserved}" 
					  Content="Only Observed" 
					  Visibility="{Binding IsObservation, Converter={StaticResource BoolToVis}, ConverterParameter=True}"
                      IsEnabled="{Binding IsEditable}"/>
            
            <ListBox ItemsSource="{Binding Circumstances}" 
                     SelectedItem="{Binding Circumstance, Mode=TwoWay}"
                     IsEnabled="{Binding IsEditable}"/>
        </StackPanel>
		</ScrollViewer>
    </Grid>
 
   <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="False">
            
            
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>

<UserControl x:Class="DiversityPhone.Controls.CommandNotAvailableLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="40" d:DesignWidth="320">
    <Grid x:Name="contentPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto" MinWidth="280"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="{StaticResource PhoneForegroundBrush}" 
                   Width="40" Height="40">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="/DiversityPhone;component/Images/MetroIcons/white/i.png" />
            </Rectangle.OpacityMask>
        </Rectangle>        
        <TextBlock Grid.Column="1" x:Name="textField" Style="{StaticResource InfoLabelTextStyle}" Width="422" Height="Auto" TextWrapping="Wrap" Margin="6,0,0,0"/>
    </Grid>
</UserControl>

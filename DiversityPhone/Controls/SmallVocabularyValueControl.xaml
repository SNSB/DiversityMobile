<UserControl x:Class="DiversityPhone.Controls.SmallVocabularyValueControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <toolkit:ListPicker ItemsSource="{Binding Items}"
                        SelectedItem="{Binding Value,Mode=TwoWay}"
                        Header="{Binding Header, Mode=OneTime}"
                        FullModeHeader="{Binding Header, Mode=OneTime}"
                        ItemTemplate="{StaticResource TermListItemTemplate}"
                        FullModeItemTemplate="{StaticResource TermListPickerItemTemplate}">
        
    </toolkit:ListPicker>
</UserControl>

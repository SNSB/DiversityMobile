<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="TermListItemTemplate">
        <TextBlock Text="{Binding DisplayText}"/>
    </DataTemplate>
    <DataTemplate x:Key="TermListPickerItemTemplate">
        <TextBlock Text="{Binding DisplayText}" Style="{StaticResource PhoneTextExtraLargeStyle}"/>
    </DataTemplate>
    <DataTemplate x:Key="FieldDataItemTemplate">
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding Icon,Converter={StaticResource IconPathConverter}}" Height="40" Width="40"/>
            <Button Style="{StaticResource ItemButtonStyle}"
                    Content="{Binding Description}"
                    Command="{Binding Select}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="IdentificationSingleLevelItemTemplate">
        <StackPanel Orientation="Horizontal">
            <Image />
            <Button Style="{StaticResource ItemButtonStyle}"
                    Content="{Binding Description}"
                    Command="{Binding Select}"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="IdentificationTwoLevelItemTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Column="0" Grid.Row="0"
						Grid.ColumnSpan="2" Orientation="Horizontal">
	            <Image />
	            <Button Style="{StaticResource ItemButtonStyle}"
	                    Content="{Binding Description}"
	                    Command="{Binding Select}"/>
       		</StackPanel>
            
            <ItemsControl Grid.Column="1" Grid.Row="1" 					 
                     ItemsSource="{Binding SubUnits}"
                     ItemTemplate="{StaticResource IdentificationSingleLevelItemTemplate}"
                     Visibility="{Binding HasSubUnits, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </DataTemplate>
    
    <DataTemplate x:Key="IdentificationDetailItemTemplate">
        <StackPanel Orientation="Horizontal">
            <Image />
            <Button Style="{StaticResource ItemButtonStyle}"
                    Content="{Binding Description}"
                    Command="{Binding Select}"/>
        </StackPanel>
    </DataTemplate>
    
    <DataTemplate x:Key="GeoRefItemTemplate">
        <TextBlock>GEOREF</TextBlock>
    </DataTemplate>
</ResourceDictionary>